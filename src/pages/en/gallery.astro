---
import ContentLayout from '@/layouts/ContentLayout.astro';
import { t } from '@/i18n/ui';

const lang = 'en';
---

<ContentLayout
  title="Gallery"
  description="Photos and videos from Pak Shao Lin."
  lang={lang}
  breadcrumbs={[
    { label: t(lang, 'nav.home'), href: '/en/' },
    { label: t(lang, 'nav.gallery') },
  ]}
>
  <p class="text-lg text-gray-medium mb-10">
    Explore moments from our training sessions, competitions, events, and cultural celebrations.
  </p>

  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 not-prose">
    {Array.from({ length: 6 }).map((_, i) => (
      <div class="aspect-[4/3] bg-gray-light rounded-xl border border-gray-light flex items-center justify-center group hover:border-gold/30 hover:shadow-md transition-all">
        <div class="text-center">
          <svg class="w-12 h-12 mx-auto text-gray-medium/30" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="m2.25 15.75 5.159-5.159a2.25 2.25 0 0 1 3.182 0l5.159 5.159m-1.5-1.5 1.409-1.409a2.25 2.25 0 0 1 3.182 0l2.909 2.909M3.75 21h16.5A2.25 2.25 0 0 0 22.5 18.75V5.25A2.25 2.25 0 0 0 20.25 3H3.75A2.25 2.25 0 0 0 1.5 5.25v13.5A2.25 2.25 0 0 0 3.75 21Z" />
          </svg>
          <p class="text-sm text-gray-medium/50 mt-2">Photo {i + 1}</p>
        </div>
      </div>
    ))}
  </div>

  <div class="mt-12 p-6 bg-red-dark/5 rounded-xl border border-red-primary/10 not-prose text-center">
    <p class="text-gray-medium">
      More photos and videos coming soon. Follow us on social media for the latest updates.
    </p>
  </div>
</ContentLayout>
