---
import ContentLayout from '@/layouts/ContentLayout.astro';
import { t } from '@/i18n/ui';

const lang = 'en';
---

<ContentLayout
  title="Gallery"
  description="Photos and videos from Pak Shao Lin."
  lang={lang}
  breadcrumbs={[
    { label: t(lang, 'nav.home'), href: '/en/' },
    { label: t(lang, 'nav.gallery') },
  ]}
>
  <p class="text-lg text-gray-medium mb-10">
    Explore moments from our training sessions, competitions, events, and cultural celebrations.
  </p>

  <div class="space-y-12 not-prose">
    <!-- Instructors & Professors -->
    <div>
      <h2 class="text-2xl font-bold text-gray-dark mb-4">Instructors & Professors</h2>
      <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-4 gap-3">
        {[
          'chtfrontgil', 'chtlatgil', 'egon01', 'egon02', 'egon03',
          'felipe-giorgi-kwantao', 'flafac', 'flav-rob-desarm', 'flav6kt',
          'gil-mario', 'gil2mach', 'gil4louv',
        ].map((name) => (
          <div class="aspect-square rounded-lg overflow-hidden bg-gray-light shadow-sm">
            <img src={`/images/gallery/instructors-professors/${name}.jpg`} alt="" class="w-full h-full object-cover hover:scale-105 transition-transform duration-300" loading="lazy" />
          </div>
        ))}
      </div>
    </div>

    <!-- Group Training -->
    <div>
      <h2 class="text-2xl font-bold text-gray-dark mb-4">Group Training</h2>
      <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-4 gap-3">
        {[
          'col-matriz2', 'colabcan', 'colabd', 'colbatebarr',
          'colbtbra', 'colcass1', 'colcass2', 'colcass3',
        ].map((name) => (
          <div class="aspect-square rounded-lg overflow-hidden bg-gray-light shadow-sm">
            <img src={`/images/gallery/group-training/${name}.jpg`} alt="" class="w-full h-full object-cover hover:scale-105 transition-transform duration-300" loading="lazy" />
          </div>
        ))}
      </div>
    </div>

    <!-- Advanced Students -->
    <div>
      <h2 class="text-2xl font-bold text-gray-dark mb-4">Advanced Students</h2>
      <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-4 gap-3">
        {[
          'alexandre-fatu-bast', 'allan-assan-bast', 'andre-f2-2k', 'caio-f2-3k',
          'diego-5kt', 'diego-e-glaucia-base-cav', 'dr-joao-tecnica-do-tigre',
          'erick-munekata-louva-deus',
        ].map((name) => (
          <div class="aspect-square rounded-lg overflow-hidden bg-gray-light shadow-sm">
            <img src={`/images/gallery/advanced-students/${name}.jpg`} alt="" class="w-full h-full object-cover hover:scale-105 transition-transform duration-300" loading="lazy" />
          </div>
        ))}
      </div>
    </div>

    <!-- Shaolin Monks -->
    <div>
      <h2 class="text-2xl font-bold text-gray-dark mb-4">Shaolin Monks</h2>
      <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-4 gap-3">
        {[
          'mongaber', 'mongbana2ded', 'mongbeb', 'mongcabferr',
          'mongcav', 'mongchikun1', 'mongchikung', 'mongcruz',
        ].map((name) => (
          <div class="aspect-square rounded-lg overflow-hidden bg-gray-light shadow-sm">
            <img src={`/images/gallery/shaolin-monks/${name}.jpg`} alt="" class="w-full h-full object-cover hover:scale-105 transition-transform duration-300" loading="lazy" />
          </div>
        ))}
      </div>
    </div>

    <!-- Traditional Weapons -->
    <div>
      <h2 class="text-2xl font-bold text-gray-dark mb-4">Traditional Weapons</h2>
      <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-4 gap-3">
        {[
          'bastao', 'espada-do-dragao', 'faca-lingua-do-dragao', 'faca-rabo-de-peixe',
          'banco', 'bengala', 'corrente', 'espada-gancho--orelha-de-tigre',
        ].map((name) => (
          <div class="aspect-square rounded-lg overflow-hidden bg-gray-light shadow-sm">
            <img src={`/images/gallery/weapons/${name}.jpg`} alt="" class="w-full h-full object-cover hover:scale-105 transition-transform duration-300" loading="lazy" />
          </div>
        ))}
      </div>
    </div>

    <!-- Special Moments -->
    <div>
      <h2 class="text-2xl font-bold text-gray-dark mb-4">Special Moments</h2>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-3">
        <div class="aspect-[4/3] rounded-lg overflow-hidden bg-gray-light shadow-sm">
          <img src="/images/gallery/40th-anniversary.jpg" alt="40th Anniversary" class="w-full h-full object-cover" loading="lazy" />
        </div>
        <div class="aspect-[4/3] rounded-lg overflow-hidden bg-gray-light shadow-sm">
          <img src="/images/gallery/training.jpg" alt="Training" class="w-full h-full object-cover" loading="lazy" />
        </div>
        <div class="aspect-[4/3] rounded-lg overflow-hidden bg-gray-light shadow-sm">
          <img src="/images/gallery/athlete-room.jpg" alt="Athlete Room" class="w-full h-full object-cover" loading="lazy" />
        </div>
      </div>
    </div>
  </div>
</ContentLayout>
