---
import ContentLayout from '@/layouts/ContentLayout.astro';
import { t } from '@/i18n/ui';

const lang = 'en';

const products = [
  { name: 'T-Shirt', price: 'R$ 80', image: '/images/store/regata-treino.jpg', description: 'Official Pak Shao Lin training t-shirt. Available in black and white.' },
  { name: 'Pants', price: 'R$ 120', image: '/images/store/calca-espec-loja.jpg', description: 'Traditional Kung Fu training pants. Lightweight and comfortable.' },
  { name: 'Polo', price: 'R$ 100', image: '/images/store/camisa-polo2.jpg', description: 'Official Pak Shao Lin Kung Fu polo with embroidered logo.' },
  { name: 'Backpack', price: 'R$ 150', image: '/images/store/mochila-da-pak.jpg', description: 'Durable backpack with the Pak Shao Lin logo. Perfect for training gear.' },
];
---

<ContentLayout
  title="Store"
  description="Official Pak Shao Lin products and uniforms."
  lang={lang}
  breadcrumbs={[
    { label: t(lang, 'nav.home'), href: '/en/' },
    { label: t(lang, 'nav.store') },
  ]}
>
  <!-- Store Banner -->
  <div class="not-prose rounded-xl overflow-hidden shadow-lg mb-10">
    <img src="/images/store/store-banner.jpg" alt="Pak Shao Lin Store" class="w-full h-48 sm:h-56 object-cover" loading="lazy" />
  </div>

  <p class="text-lg text-gray-medium mb-10">
    Get official Pak Shao Lin gear and uniforms. All products are available at our headquarters or can be ordered through your instructor.
  </p>

  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 not-prose">
    {products.map((product) => (
      <div class="group bg-white rounded-xl border border-gray-light shadow-sm hover:shadow-md hover:border-gold/30 transition-all overflow-hidden">
        <div class="aspect-square bg-gray-light overflow-hidden">
          <img src={product.image} alt={product.name} class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300" loading="lazy" />
        </div>
        <div class="p-5">
          <h3 class="text-lg font-bold text-gray-dark">{product.name}</h3>
          <p class="text-sm text-gray-medium mt-1">{product.description}</p>
          <p class="text-lg font-bold text-red-primary mt-3">{product.price}</p>
        </div>
      </div>
    ))}
  </div>

  <div class="mt-12 p-6 bg-red-dark/5 rounded-xl border border-red-primary/10 not-prose">
    <h3 class="text-lg font-bold text-gray-dark mb-2">How to purchase</h3>
    <p class="text-gray-medium">
      Products can be purchased directly at our headquarters in Santana or through your instructor.
      For questions about availability and sizes, please <a href="/en/contact" class="text-red-primary hover:underline font-medium">contact us</a>.
    </p>
  </div>
</ContentLayout>
