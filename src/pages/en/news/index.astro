---
import ContentLayout from '@/layouts/ContentLayout.astro';
import { t } from '@/i18n/ui';

const lang = 'en';
---

<ContentLayout
  title="News"
  description="Pak Shao Lin news and events."
  lang={lang}
  breadcrumbs={[
    { label: t(lang, 'nav.home'), href: '/en/' },
    { label: t(lang, 'nav.news') },
  ]}
>
  <div class="not-prose flex flex-col items-center justify-center py-16 text-center">
    <div class="w-20 h-20 bg-gold/10 rounded-full flex items-center justify-center mb-6">
      <svg class="w-10 h-10 text-gold-dark" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
        <path stroke-linecap="round" stroke-linejoin="round" d="M12 7.5h1.5m-1.5 3h1.5m-7.5 3h7.5m-7.5 3h7.5m3-9h3.375c.621 0 1.125.504 1.125 1.125V18a2.25 2.25 0 0 1-2.25 2.25M16.5 7.5V18a2.25 2.25 0 0 0 2.25 2.25M16.5 7.5V4.875c0-.621-.504-1.125-1.125-1.125H4.125C3.504 3.75 3 4.254 3 4.875V18a2.25 2.25 0 0 0 2.25 2.25h13.5M6 7.5h3v3H6V7.5Z" />
      </svg>
    </div>
    <h2 class="text-2xl font-bold text-gray-dark mb-3">Coming soon</h2>
    <p class="text-gray-medium max-w-md">
      We are working on bringing you the latest news and events from the Pak Shao Lin community.
      Stay tuned for updates on competitions, seminars, and more.
    </p>
  </div>
</ContentLayout>
