            onclick={`document.getElementById('gallery-lightbox').querySelector('img').src='/images/gallery/advanced-students/${name}.jpg';document.getElementById('gallery-lightbox').showModal()`}
          >
            <img src={`/images/gallery/advanced-students/${name}.jpg`} alt="" class="w-full h-full object-cover" loading="lazy" />
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- ═══ 6. SHAOLIN MONKS ══════════════════════════════════════════ -->
  <section class="gallery-dark-bg-alt py-16 sm:py-24 relative overflow-hidden">
    <div class="absolute inset-0 opacity-[0.03]">
      <img src="/images/gallery/shaolin-monks/monges1.jpg" alt="" class="w-full h-full object-cover" aria-hidden="true" />
    </div>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
      <div class="text-center mb-12" data-gsap="section-head">
        <div class="font-chinese text-gold/15 text-5xl mb-2 tracking-[0.3em]" data-gsap="section-zh" aria-hidden="true">僧 侶</div>
        <h2 class="text-2xl sm:text-3xl font-bold text-gold">{t(lang, 'gallery.monks.title')}</h2>
        <div class="flex items-center justify-center gap-3 max-w-xs mx-auto mt-4">
          <div class="h-px flex-1 bg-gradient-to-r from-transparent to-gold/30"></div>
          <div class="w-2 h-2 rotate-45 border border-gold/40"></div>
          <div class="h-px flex-1 bg-gradient-to-l from-transparent to-gold/30"></div>
        </div>
      </div>
      <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-4 xl:grid-cols-6 gap-2 sm:gap-3" data-gsap="gallery-grid">
        {monks.map((name) => (
          <div
            class="gallery-card aspect-square rounded-lg overflow-hidden border border-white/5 cursor-pointer"
