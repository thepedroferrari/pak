  </section>

  <!-- ═══ 5. ADVANCED STUDENTS ══════════════════════════════════════ -->
  <section class="gallery-dark-bg py-16 sm:py-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
