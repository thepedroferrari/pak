        <h2 class="text-2xl sm:text-3xl font-bold text-gold">{t(lang, 'gallery.weapons.title')}</h2>
        <div class="flex items-center justify-center gap-3 max-w-xs mx-auto mt-4">
          <div class="h-px flex-1 bg-gradient-to-r from-transparent to-gold/30"></div>
          <div class="w-2 h-2 rotate-45 border border-gold/40"></div>
          <div class="h-px flex-1 bg-gradient-to-l from-transparent to-gold/30"></div>
        </div>
        <p class="mt-4 text-sm text-gray-light/40">{t(lang, 'gallery.weapons.subtitle')}</p>
      </div>
      <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-4 gap-3 sm:gap-4" data-gsap="gallery-grid">
        {weapons.map((w) => (
          <div
            class="gallery-card aspect-[4/3] rounded-lg overflow-hidden border border-gold/10 cursor-pointer relative group"
