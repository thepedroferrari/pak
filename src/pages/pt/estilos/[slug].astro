---
import { getCollection } from 'astro:content';
import ContentLayout from '@/layouts/ContentLayout.astro';
import { t } from '@/i18n/ui';

const lang = 'pt';

export async function getStaticPaths() {
  const styles = await getCollection('styles');
  return styles.map((style) => ({
    params: { slug: style.id },
    props: { style },
  }));
}

const { style } = Astro.props;
const { name_pt, origin_pt, description_pt, characteristics_pt } = style.data;
---

<ContentLayout
  title={name_pt}
  description={description_pt}
  lang={lang}
  breadcrumbs={[
    { label: t(lang, 'nav.home'), href: '/pt/' },
    { label: t(lang, 'nav.styles'), href: '/pt/estilos/' },
    { label: name_pt },
  ]}
>
  <div class="space-y-6 not-prose">
    <div>
      <p class="text-sm text-gold-dark font-medium">{t(lang, 'styles.origin')}: {origin_pt}</p>
    </div>
    <div>
      <p class="text-lg text-gray-medium leading-relaxed">{description_pt}</p>
    </div>
    <div>
      <h2 class="text-xl font-bold text-gray-dark mb-3">{t(lang, 'styles.characteristics')}</h2>
      <ul class="space-y-2">
        {characteristics_pt.map((c) => (
          <li class="flex items-center gap-2 text-gray-medium">
            <span class="w-2 h-2 bg-red-primary rounded-full shrink-0"></span>
            {c}
          </li>
        ))}
      </ul>
    </div>
  </div>
</ContentLayout>
