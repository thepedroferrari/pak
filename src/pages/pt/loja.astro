---
import ContentLayout from '@/layouts/ContentLayout.astro';
import { t } from '@/i18n/ui';

const lang = 'pt';

const products = [
  { name: 'Camiseta', price: 'R$ 89,90', image: '/images/store/regata-treino.jpg' },
  { name: 'Calça', price: 'R$ 119,90', image: '/images/store/calca-espec-loja.jpg' },
  { name: 'Polo', price: 'R$ 99,90', image: '/images/store/camisa-polo2.jpg' },
  { name: 'Mochila', price: 'R$ 149,90', image: '/images/store/mochila-da-pak.jpg' },
];
---

<ContentLayout
  title="Loja"
  description="Produtos e uniformes oficiais da Pak Shao Lin."
  lang={lang}
  breadcrumbs={[
    { label: t(lang, 'nav.home'), href: '/pt/' },
    { label: t(lang, 'nav.store') },
  ]}
>
  <!-- Store Banner -->
  <div class="not-prose rounded-xl overflow-hidden shadow-lg mb-8">
    <img src="/images/store/store-banner.jpg" alt="Loja Pak Shao Lin" class="w-full h-48 sm:h-56 object-cover" loading="lazy" />
  </div>

  <p class="text-lg text-gray-medium mb-8">
    Adquira uniformes e acessórios oficiais da Pak Shao Lin. Entre em contato para encomendas e disponibilidade.
  </p>

  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 not-prose">
    {products.map((product) => (
      <div class="group bg-white rounded-xl border border-gray-light shadow-sm hover:shadow-md hover:border-gold/30 transition-all overflow-hidden text-center">
        <div class="aspect-square bg-gray-light overflow-hidden">
          <img src={product.image} alt={product.name} class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300" loading="lazy" />
        </div>
        <div class="p-4">
          <h3 class="font-bold text-gray-dark text-lg">{product.name}</h3>
          <p class="text-red-primary font-semibold mt-2">{product.price}</p>
        </div>
      </div>
    ))}
  </div>

  <div class="mt-12 p-6 bg-red-dark/5 rounded-xl border border-red-primary/10 not-prose">
    <h3 class="text-lg font-bold text-gray-dark mb-2">Quer adquirir um produto?</h3>
    <p class="text-gray-medium mb-4">
      Entre em contato conosco para consultar disponibilidade e fazer sua encomenda.
    </p>
    <a
      href="/pt/contato"
      class="inline-flex items-center gap-2 px-6 py-2.5 bg-red-primary text-white font-semibold rounded-lg hover:bg-red-dark transition-colors"
    >
      Fale Conosco
    </a>
  </div>
</ContentLayout>
