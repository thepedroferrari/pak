---
import type { Lang } from '@/i18n/ui';
import SEO from '@/components/SEO.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';

interface Props {
  title?: string;
  description?: string;
  ogImage?: string;
  lang: Lang;
  type?: 'website' | 'article';
  publishedDate?: string;
}

const { title, description, ogImage, lang, type, publishedDate } = Astro.props;
const currentPath = Astro.url.pathname;
---

<!doctype html>
<html lang={lang === 'pt' ? 'pt-BR' : 'en'} class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&display=swap"
      rel="stylesheet"
    />
    <SEO
      title={title}
      description={description}
      ogImage={ogImage}
      lang={lang}
      currentPath={currentPath}
      type={type}
      publishedDate={publishedDate}
    />
    <style is:global>
      @import '@/styles/global.css';
    </style>
  </head>
  <body class="min-h-screen flex flex-col bg-white text-gray-dark font-sans antialiased">
    <Header lang={lang} currentPath={currentPath} />
    <main class="flex-1">
      <slot />
    </main>
    <Footer lang={lang} />
  </body>
</html>
