---
import type { Lang } from '@/i18n/ui';
import { t } from '@/i18n/ui';

interface TransitInfo {
  metro?: {
    line: string;
    lineColor: string;
    stations: string[];
  };
  bus?: string[];
  note?: string;
}

interface ScheduleItem {
  days: string;
  time: string;
}

interface Props {
  lang: Lang;
  name: string;
  zhChar: string;
  address: string;
  instructor: string;
  schedule: ScheduleItem[];
  partnership: string;
  hasParking: boolean;
  isHQ?: boolean;
  transit?: TransitInfo;
  mapQuery: string;
}

const { lang, name, zhChar, address, instructor, schedule, partnership, hasParking, isHQ = false, transit, mapQuery } = Astro.props;

const mapEmbedUrl = `https://maps.google.com/maps?q=${mapQuery}&t=&z=15&ie=UTF8&iwloc=&output=embed`;
const mapLinkUrl = `https://www.google.com/maps/search/?api=1&query=${mapQuery}`;
---

<div class="location-card flex flex-col h-full bg-white/[0.03] border border-gold/10 rounded-lg overflow-hidden" data-gsap="location-card">
  <!-- Info Panel -->
  <div class="flex-1 p-6 sm:p-8">
    <!-- Header -->
    <div class="flex items-start justify-between mb-5">
      <div class="flex items-center gap-3">
        <span class="font-chinese text-gold/25 text-3xl" aria-hidden="true">{zhChar}</span>
        <h3 class="text-xl font-bold text-white">{name}</h3>
      </div>
      {isHQ && (
        <span class="px-2.5 py-0.5 bg-gold/10 text-gold text-xs font-semibold rounded-full uppercase tracking-wider shrink-0">
          {t(lang, 'classes.headquarters')}
        </span>
      )}
    </div>

    <!-- Details Grid -->
    <div class="space-y-3 text-sm">
      <!-- Address -->
      <div class="flex items-start gap-3">
        <svg class="w-4 h-4 text-gold/60 shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
        </svg>
        <span class="text-gray-light/60">{address}</span>
      </div>

      <!-- Instructor -->
      <div class="flex items-start gap-3">
        <svg class="w-4 h-4 text-gold/60 shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
        </svg>
        <span class="text-gray-light/60">{instructor}</span>
      </div>

      <!-- Schedule -->
      <div class="flex items-start gap-3">
        <svg class="w-4 h-4 text-gold/60 shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <div class="space-y-1">
          {schedule.map((s) => (
            <p>
              <span class="text-gray-light/40">{s.days}</span>
              <span class="text-gold ml-2">{s.time}</span>
            </p>
          ))}
        </div>
      </div>

      <!-- Partnership & Parking -->
      <div class="flex flex-wrap items-center gap-4 pt-1">
        <div class="flex items-center gap-2">
          <svg class="w-4 h-4 text-gold/60 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
          </svg>
          <span class="text-gray-light/50 text-xs">{partnership}</span>
        </div>
        {hasParking && (
          <div class="flex items-center gap-1.5">
            <svg class="w-4 h-4 text-gold/60 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l1-3h12l1 3M3 14h18M5 18h.01M19 18h.01M6 14v4m12-4v4M4 10h16" />
            </svg>
            <span class="text-gray-light/50 text-xs">{t(lang, 'contact.locations.parking')}</span>
          </div>
        )}
      </div>
    </div>
  </div>

  <!-- Transit Section -->
  {transit && (transit.metro || transit.bus || transit.note) && (
    <div class="border-t border-gold/10 px-6 sm:px-8 py-4 space-y-3">
      <p class="text-xs font-semibold uppercase tracking-wider text-gold/50">{t(lang, 'contact.locations.transit')}</p>

      {transit.metro && (
        <div class="flex items-start gap-3">
          <svg class="w-4 h-4 shrink-0 mt-0.5 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 17l-2 4m10-4l2 4M12 2v4m-4 4h8m-8 4h8M7 6h10a2 2 0 012 2v8a2 2 0 01-2 2H7a2 2 0 01-2-2V8a2 2 0 012-2z" />
          </svg>
          <div class="flex flex-wrap items-center gap-2">
            <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-semibold bg-blue-500/20 text-blue-300 border border-blue-400/20">
              {transit.metro.line}
            </span>
            {transit.metro.stations.map((station) => (
              <span class="text-xs text-gray-light/50">{station}</span>
            ))}
          </div>
        </div>
      )}

      {transit.bus && transit.bus.length > 0 && (
        <div class="flex items-start gap-3">
          <svg class="w-4 h-4 shrink-0 mt-0.5 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 17h.01M16 17h.01M5 11h14M7 5h10a2 2 0 012 2v10a2 2 0 01-2 2H7a2 2 0 01-2-2V7a2 2 0 012-2z" />
          </svg>
          <div class="flex flex-wrap gap-1.5">
            {transit.bus.map((line) => (
              <span class="inline-block px-1.5 py-0.5 rounded text-xs font-mono text-gray-light/60 bg-white/5 border border-white/10">
                {line}
              </span>
            ))}
          </div>
        </div>
      )}

      {transit.note && (
        <p class="text-xs text-gray-light/40 pl-7">{transit.note}</p>
      )}
    </div>
  )}

  <!-- Google Maps Embed (dark theme via CSS filter) -->
  <div class="relative mt-auto" data-gsap="location-map">
    <iframe
      src={mapEmbedUrl}
      width="100%"
      height="250"
      style="border:0"
      loading="lazy"
      referrerpolicy="no-referrer-when-downgrade"
      title={`Map - ${name}`}
      class="w-full dark-map"
    ></iframe>
  </div>

  <!-- Open in Maps Link -->
  <div class="px-6 sm:px-8 py-3 border-t border-gold/10">
    <a
      href={mapLinkUrl}
      target="_blank"
      rel="noopener noreferrer"
      class="inline-flex items-center gap-1.5 text-sm text-gold/70 hover:text-gold transition-colors"
    >
      {t(lang, 'contact.locations.openMap')}
      <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
      </svg>
    </a>
  </div>
</div>

<style>
  .dark-map {
    filter: invert(90%) hue-rotate(180deg) saturate(0.3) brightness(0.6) contrast(1.3);
  }
</style>
