---
import type { Lang } from '@/i18n/ui';
import { t } from '@/i18n/ui';

interface Props {
  lang: Lang;
}

const { lang } = Astro.props;
---

<form
  action="https://formspree.io/f/pakshaolin"
  method="POST"
  class="space-y-6"
>
  <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
    <div>
      <label for="name" class="block text-sm font-medium text-gray-dark mb-1.5">
        {t(lang, 'contact.form.name')} *
      </label>
      <input
        type="text"
        id="name"
        name="name"
        required
        class="w-full px-4 py-2.5 border border-gray-light rounded-lg focus:ring-2 focus:ring-red-primary/20 focus:border-red-primary transition-colors outline-none"
      />
    </div>
    <div>
      <label for="email" class="block text-sm font-medium text-gray-dark mb-1.5">
        {t(lang, 'contact.form.email')} *
      </label>
      <input
        type="email"
        id="email"
        name="email"
        required
        class="w-full px-4 py-2.5 border border-gray-light rounded-lg focus:ring-2 focus:ring-red-primary/20 focus:border-red-primary transition-colors outline-none"
      />
    </div>
  </div>

  <div>
    <label for="subject" class="block text-sm font-medium text-gray-dark mb-1.5">
      {t(lang, 'contact.form.subject')}
    </label>
    <input
      type="text"
      id="subject"
      name="subject"
      class="w-full px-4 py-2.5 border border-gray-light rounded-lg focus:ring-2 focus:ring-red-primary/20 focus:border-red-primary transition-colors outline-none"
    />
  </div>

  <div>
    <label for="message" class="block text-sm font-medium text-gray-dark mb-1.5">
      {t(lang, 'contact.form.message')} *
    </label>
    <textarea
      id="message"
      name="message"
      rows="5"
      required
      class="w-full px-4 py-2.5 border border-gray-light rounded-lg focus:ring-2 focus:ring-red-primary/20 focus:border-red-primary transition-colors outline-none resize-y"
    ></textarea>
  </div>

  <button
    type="submit"
    class="px-8 py-3 bg-red-primary text-white font-semibold rounded-lg hover:bg-red-dark transition-colors shadow-lg shadow-red-primary/25"
  >
    {t(lang, 'contact.form.submit')}
  </button>
</form>
