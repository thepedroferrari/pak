---
import type { Lang } from '@/i18n/ui';
import { t } from '@/i18n/ui';

interface Props {
  lang: Lang;
}

const { lang } = Astro.props;
---

<form
  action="https://formspree.io/f/pakshaolin"
  method="POST"
  class="space-y-6"
  data-gsap="contact-form"
>
  <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
    <div>
      <label for="name" class="block text-sm font-medium text-gray-light/70 mb-1.5">
        {t(lang, 'contact.form.name')} *
      </label>
      <input
        type="text"
        id="name"
        name="name"
        required
        class="w-full px-4 py-2.5 bg-white/5 border border-white/10 rounded-lg text-white placeholder:text-white/30 focus:border-gold/50 focus:ring-2 focus:ring-gold/20 transition-colors outline-none"
      />
    </div>
    <div>
      <label for="email" class="block text-sm font-medium text-gray-light/70 mb-1.5">
        {t(lang, 'contact.form.email')} *
      </label>
      <input
        type="email"
        id="email"
        name="email"
        required
        class="w-full px-4 py-2.5 bg-white/5 border border-white/10 rounded-lg text-white placeholder:text-white/30 focus:border-gold/50 focus:ring-2 focus:ring-gold/20 transition-colors outline-none"
      />
    </div>
  </div>

  <div>
    <label for="subject" class="block text-sm font-medium text-gray-light/70 mb-1.5">
      {t(lang, 'contact.form.subject')}
    </label>
    <input
      type="text"
      id="subject"
      name="subject"
      class="w-full px-4 py-2.5 bg-white/5 border border-white/10 rounded-lg text-white placeholder:text-white/30 focus:border-gold/50 focus:ring-2 focus:ring-gold/20 transition-colors outline-none"
    />
  </div>

  <div>
    <label for="message" class="block text-sm font-medium text-gray-light/70 mb-1.5">
      {t(lang, 'contact.form.message')} *
    </label>
    <textarea
      id="message"
      name="message"
      rows="5"
      required
      class="w-full px-4 py-2.5 bg-white/5 border border-white/10 rounded-lg text-white placeholder:text-white/30 focus:border-gold/50 focus:ring-2 focus:ring-gold/20 transition-colors outline-none resize-y"
    ></textarea>
  </div>

  <div class="flex flex-col sm:flex-row sm:items-center gap-4">
    <button
      type="submit"
      class="inline-flex items-center justify-center gap-2 px-8 py-3 bg-red-primary text-white font-semibold rounded-lg hover:bg-red-dark transition-colors shadow-lg shadow-red-primary/25"
    >
      {t(lang, 'contact.form.submit')}
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
      </svg>
    </button>
    <span class="text-sm text-gray-light/30">{t(lang, 'contact.form.response')}</span>
  </div>
</form>
